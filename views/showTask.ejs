<!DOCTYPE html>

<head>
  <title> Main Page </title>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="../css/dashboard_user.css" />
</head>

<body>
  <div id="conent">
    <div id="top">
      <nav id="menu">
        <li class="option"><a href="/loading_adm" class="option">Back</a></li>
      </nav>
    </div>
    <div id="rest">
      <div id="left">
        <div id="taskTop">To Do</div>

        <div id="tasks">
          <% tasks.forEach((elem, index, arr)=> { %>
            <%if(status[index]=="DO" ) {%>
              <div id="task">
                <div id="taskText"><%-elem%></div>
                <form action="/taskDetail" method="POST">
                    <button id="taskButton" type="submit">
                      <a>Details</a>
                      <input name="taskname" id="taskname" type="hidden" value="<%-elem%>"></input>
                      <div id="bar2"></div>
                    </button>
                </form>
              </div>
              <%}%>
                <%})%>
        </div>
      </div>
      <div id="middle">
        <div id="taskTop">In Progress</div>
        <div id="tasks">
          <% tasks.forEach((elem, index, arr)=> { %>
            <%if(status[index]=="INP" ) {%>
              <div id="task">
                <div id="taskText"><%-elem%></div>
                <form action="/taskDetail" method="POST">
                  <button id="taskButton" type="submit">
                    <a>Details</a>
                    <input name="taskname" id="taskname" type="hidden" value="<%-elem%>"></input>
                    <div id="bar2"></div>
                  </button>
                  <div id="bar2"></div>
                </div>
              </div>
              <%}%>
                <%})%>
        </div>
      </div>
      <div id="right">
        <div id="taskTop">Done</div>
        <div id="tasks">
          <% tasks.forEach((elem, index, arr)=> { %>
            <%if(status[index]=="DONE" ) {%>
              <div id="task">
                <div id="taskText"><%-elem%></div>
                <form action="/taskDetail" method="POST">
                  <button id="taskButton" type="submit">
                    <a>Details</a>
                    <input name="taskname" id="taskname" type="hidden" value="<%-elem%>"></input>
                    <div id="bar2"></div>
                  </button>
                  <div id="bar2"></div>
                </div>
              </div>
              <%}%>
                <%})%>
        </div>
      </div>
    </div>
  </div>

</body>

</html>